<%- include('../layout/header', {title: title}) %>
<%- include('../layout/menu', {pagename: 'books'}) %>

<div class="jumbotron jumbotron-fluid">
    <div class="container">

        <% if(books.length) { %>
            <table class="table table-striped table-sm  mt-3">
                <thead>
                <tr>
                    <th scope="col">№</th>
                    <th scope="col">Наименование</th>
                    <th scope="col">Автор</th>
                    <th scope="col">Просмотров</th>
                    <th scope="col"></th>
                </tr>
                </thead>
                <tbody>
        
                    <% books.map((el, idx) => {  %>
                        <tr>
                            <th scope="row"><%= idx +1 %></th>
                            <td><%= el.title %></td>
                            <td><%= el.authors %></td>
                            <td><%= el.count %></td>
                            <td class="text-right">
                                <a class="btn btn-sm btn-success" href="/books/<%= el.id %>">
                                    <i class="fa fa-eye" aria-hidden="true"></i>
                                </a>
                                <a class="btn btn-sm btn-primary" href="/books/update/<%= el.id %>">
                                    <i class="fa fa-pencil" aria-hidden="true"></i>
                                </a>
                                <form action="/books/delete/<%= el.id %>" method="POST" class="d-inline">
                                    <button class="btn btn-sm btn-danger">
                                        <i class="fa fa-trash" aria-hidden="true"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    <% }) %>
        
                </tbody>
            </table>
        <% } else { %>   
            <%- include('../error', {title: 'Книги', errCode: '404', errDesc: 'В базе пока нет сохранённых книг.'}) %>
        <% } %>    
    </div>
</div>

<%- include('../layout/footer') %>