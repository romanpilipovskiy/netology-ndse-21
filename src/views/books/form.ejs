<form method="POST" class="mt-5">
    <div class="form-group">
        <label for="inputTitle">Наименование</label>
        <input 
        <% if (!formTypeEdit) { %>
            disabled='true'
        <% } %>
            type="text"
            value="<%= book.title %>"
            name="title"
            class="form-control"
            id="inputTitle">
    </div>

    <div class="form-group">
        <label for="inputAuthors">Автор</label>
        <input 
        <% if (!formTypeEdit) { %>
            disabled='true'
        <% } %>
            type="text"
            value="<%= book.authors %>"
            name="authors"
            class="form-control"
            id="inputAuthors">
    </div>

    <div class="form-group">
        <label for="inputDescription">Описание</label>
        <textarea
        <% if (!formTypeEdit) { %>
            disabled='true'
        <% } %>
            rows="3"
            name="description"
            class="form-control"
            id="inputDescription"
        ><%= book.description %></textarea>
    </div>

    <br>

    <% if (formTypeEdit) { %>
        <div class="form-group text-right ">
            <button type="submit" class="btn btn-primary">Сохранить</button>
        </div>
    <% } else { %>
        <a class="btn btn-sm btn-primary" href="/books">
            <i class="fa-solid fa-backward"></i>
        </a>
    <% } %>
</form>